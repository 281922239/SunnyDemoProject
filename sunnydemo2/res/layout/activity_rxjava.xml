<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/rxjava_send"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="简单的消息传递" />

        <TextView
            android:id="@+id/rxjava_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/rxjava_info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />


        <Button
            android:id="@+id/rxjava_retrofit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Retrofit网络请求,用Call接收" />

        <Button
            android:id="@+id/retrofit_observable"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Retrofit网络请求,用Observable接收" />

        <Button
            android:id="@+id/retrofit_eventbus"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Retrofit网络请求,用EventBus来发送，接收" />
    </LinearLayout>
</ScrollView>